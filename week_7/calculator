#include <stdio.h>

int main()
{
    int num1, num2;
    char op;

    printf("Enter First Number: ");
    scanf("%i", &num1);
    printf("Enter operator: ");
    scanf(" %c", &op);
    printf("Enter Second Number: ");
    scanf("%d", &num2);

    if (op == '+')
    {
        printf("%d", num1 + num2);
    }

    else if (op == '-')
    {
        printf("%d", num1 - num2);
    }

    else if (op == '/')
    {
        printf("%d", num1 / num2);
    }

    else if (op == '*')
    {
        printf("%d", num1 * num2);
    }

    else
    {
        printf("Invalid Input");
    }
}
